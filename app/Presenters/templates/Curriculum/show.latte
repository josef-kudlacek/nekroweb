{block content}
    <div class="container">
        <h1 n:block="title">Osnovy</h1>
        <div class="team-grid">
            <div class="row people">
                {if $lessons}
                    {var $year = 0}
                    {foreach $lessons as $lesson}
                        {if $lesson->YearNumber == $year}
                            <tr>
                                <td>{$lesson->LessonNumber}. <strong>{$lesson->Name}</strong>
                                    {ifset $lesson->TypeName}[<abbr title="{$lesson->TypeDescription}" tabindex="0">{$lesson->TypeName}</abbr>]{/ifset}
                                </td>
                            </tr>
                        {else}
                            {if $iterator->first}

                            {else}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            {/if}
                        {var $year = $lesson->YearNumber}
                            <div class="col-md-4 col-lg-3 item curriculum-item">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>{$lesson->YearNumber}. ročník – {$lesson->CodeName}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>{$lesson->LessonNumber}. <strong>{$lesson->Name}</strong>
                                                    {ifset $lesson->TypeName}[<abbr title="{$lesson->TypeDescription}" tabindex="0">{$lesson->TypeName}</abbr>]{/ifset}
                                                </td>
                                            </tr>
                        {/if}
                    {/foreach}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                {/if}
            </div>
        </div>
    </div>
{/block}