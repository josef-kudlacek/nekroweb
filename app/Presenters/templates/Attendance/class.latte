                            {$attendanceItem->Lesson13ATP}{if $attendanceItem->Lesson13AP}+<abbr title="{$attendanceItem->Lesson13Desc}">{$attendanceItem->Lesson13AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson14AT|attendanceType}">
                            {$attendanceItem->Lesson14ATP}{if $attendanceItem->Lesson14AP}+<abbr title="{$attendanceItem->Lesson14Desc}">{$attendanceItem->Lesson14AP}</abbr>
                            {/if}
                        </td>
                    </tr>
                {/foreach}
                </tbody>
            </table>
        {else}
            Nenalezen žádný záznam.
        {/if}

        {include "../Attendance/legend.latte"}
    </div>
{/block}