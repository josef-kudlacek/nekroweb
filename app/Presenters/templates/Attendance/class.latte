{block content}
    <div class="container">
        <h1 n:block="title">Přehled docházky a aktivity</h1>
        <h2>Třída {$user->getIdentity()->className} za školní rok {$user->getIdentity()->semesterFrom}{if $user->getIdentity()->semesterTo}/{$user->getIdentity()->semesterTo}{/if}</h2>
        {if $attendance}
            <input class="form-control" id="tableFilter" type="text" placeholder="Filtrovat řádky tabulky">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-white bg-dark">Student</th>
                        <th class="text-white bg-dark">#1</th>
                        <th class="text-white bg-dark">#2</th>
                        <th class="text-white bg-dark">#3</th>
                        <th class="text-white bg-dark">#4</th>
                        <th class="text-white bg-dark">#5</th>
                        <th class="text-white bg-dark">#6</th>
                        <th class="text-white bg-dark">#7</th>
                        <th class="text-white bg-dark">#8</th>
                        <th class="text-white bg-dark">#9</th>
                        <th class="text-white bg-dark">#10</th>
                        <th class="text-white bg-dark">#11</th>
                        <th class="text-white bg-dark">#12</th>
                        <th class="text-white bg-dark">#13</th>
                        <th class="text-white bg-dark">#14</th>
                    </tr>
                </thead>
                <tbody id="filter">
                {foreach $attendance as $attendanceItem}
                    <tr>
                        <td class="table-{$attendanceItem->HouseId|houseType}">
                        <a href="https://bradavice.eu//ukaz.php?name={urlencode($attendanceItem->StudentName|encodeToWin1250)}" target="_blank"
                            class="text-dark">{$attendanceItem->StudentName}</a>
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson1AT|attendanceType}">
                            {$attendanceItem->Lesson1ATP}{if $attendanceItem->Lesson1AP}+<abbr title="{$attendanceItem->Lesson1Desc}">{$attendanceItem->Lesson1AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson2AT|attendanceType}">
                            {$attendanceItem->Lesson2ATP}{if $attendanceItem->Lesson2AP}+<abbr title="{$attendanceItem->Lesson2Desc}">{$attendanceItem->Lesson2AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson3AT|attendanceType}">
                            {$attendanceItem->Lesson3ATP}{if $attendanceItem->Lesson3AP}+<abbr title="{$attendanceItem->Lesson3Desc}">{$attendanceItem->Lesson3AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson4AT|attendanceType}">
                            {$attendanceItem->Lesson4ATP}{if $attendanceItem->Lesson4AP}+<abbr title="{$attendanceItem->Lesson4Desc}">{$attendanceItem->Lesson4AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson5AT|attendanceType}">
                            {$attendanceItem->Lesson5ATP}{if $attendanceItem->Lesson5AP}+<abbr title="{$attendanceItem->Lesson5Desc}">{$attendanceItem->Lesson5AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson6AT|attendanceType}">
                            {$attendanceItem->Lesson6ATP}{if $attendanceItem->Lesson6AP}+<abbr title="{$attendanceItem->Lesson6Desc}">{$attendanceItem->Lesson6AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson7AT|attendanceType}">
                            {$attendanceItem->Lesson7ATP}{if $attendanceItem->Lesson7AP}+<abbr title="{$attendanceItem->Lesson7Desc}">{$attendanceItem->Lesson7AP}</abbr>
