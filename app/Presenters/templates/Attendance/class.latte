                            {$attendanceItem->Lesson9ATP}{if $attendanceItem->Lesson9AP}+<abbr title="{$attendanceItem->Lesson9Desc}">{$attendanceItem->Lesson9AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson10AT|attendanceType}">
                            {$attendanceItem->Lesson10ATP}{if $attendanceItem->Lesson10AP}+<abbr title="{$attendanceItem->Lesson10Desc}">{$attendanceItem->Lesson10AP}</abbr>
                            {/if}
                        </td>
                        <td class="text-dark bg-{$attendanceItem->Lesson11AT|attendanceType}">
